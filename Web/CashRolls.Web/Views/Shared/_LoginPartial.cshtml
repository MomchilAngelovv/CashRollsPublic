@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a asp-controller="Users" asp-action="Profile" class="nav-link">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form asp-controller="Users" asp-action="Logout" method="post" enctype="application/x-www-form-urlencoded" class="form-inline">
                <button type="submit" class="nav-link btn btn-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a asp-controller="Users" asp-action="Register" class="nav-link">Register</a>
        </li>
        <li class="nav-item">
            <a asp-controller="Users" asp-action="Login" class="nav-link">Login</a>
        </li>
    }
</ul>
